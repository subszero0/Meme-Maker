# Terraform Variables Example for Meme Maker Infrastructure
# Copy this file to terraform.tfvars and update with your values

# Core Configuration
project_name = "meme-maker"
env          = "dev"
aws_region   = "ap-south-1"

# Optional DNS Configuration
# Uncomment and configure if you want to create DNS records

# domain              = "example.com"
# lb_dns              = "my-loadbalancer-123456789.ap-south-1.elb.amazonaws.com"
# route53_zone_id     = "Z1234567890ABC"
# create_route53_record = true

# Example configurations for different environments:

# Development
# project_name = "meme-maker"
# env          = "dev"
# aws_region   = "ap-south-1"

# Staging
# project_name = "meme-maker"
# env          = "staging"
# aws_region   = "ap-south-1"
# domain       = "yourdomain.com"
# lb_dns       = "staging-lb-123456.ap-south-1.elb.amazonaws.com"

# Production
# project_name = "meme-maker"
# env          = "prod"
# aws_region   = "ap-south-1"
# domain       = "yourdomain.com"
# lb_dns       = "prod-lb-123456.ap-south-1.elb.amazonaws.com"
# route53_zone_id     = "Z1234567890ABC"
# create_route53_record = true 