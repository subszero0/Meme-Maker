# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in your actual values

# Application Settings
DEBUG=false
ENVIRONMENT=production  # CRITICAL: Set to production to test API docs disabling (CRIT-001)

# Security Settings - CRIT-002: Admin Authentication
ADMIN_API_KEY=your-secure-admin-api-key-here

# Redis Configuration - Staging
REDIS_URL=redis://redis-staging:6379
REDIS_DB=0

# Storage Configuration
STORAGE_BACKEND=local
CLIPS_DIR=/app/storage/clips
BASE_URL=http://localhost:8001

# Worker Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=300

# Security - CORS for staging
CORS_ORIGINS=["http://localhost:8082", "http://staging.memeit.pro:8081", "http://localhost:8001"]

# Logging
LOG_LEVEL=INFO

# FFmpeg binaries
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Instagram Authentication
INSTAGRAM_COOKIES_B64=your-base64-encoded-instagram-cookies-here

# Facebook Authentication
FACEBOOK_COOKIES_B64=your-base64-encoded-facebook-cookies-here
FACEBOOK_COOKIES=your-facebook-cookies-here 