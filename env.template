# Meme Maker Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
DEBUG=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Storage Configuration (Feature Flag)
STORAGE_BACKEND=local  # "s3" or "local"
CLIPS_DIR=/app/clips
BASE_URL=http://localhost:8000

# S3/MinIO Configuration (Legacy - for backward compatibility)
AWS_ACCESS_KEY_ID=clip
AWS_SECRET_ACCESS_KEY=secret
AWS_REGION=ap-south-1
AWS_ENDPOINT_URL=http://localhost:9000  # Use for MinIO local development
S3_BUCKET=clips

# For MinIO development
AWS_ALLOW_HTTP=true

# Worker Configuration
MAX_CONCURRENT_JOBS=20
JOB_TIMEOUT=300

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"] 